<%= form_for @page, url:admin_page_path(@page), remote: true do |f| %>
    <a>Title: </a><%= f.text_field :title, content: @page.title %><br/>

    <a>Content :</a><br/>
    <%= f.text_area :body, content: @page.body, style: "margin-left: 5px; width: 945px; height: 500px;" %>

    <%= f.submit %><a id="update_text"></a>
<% end %>